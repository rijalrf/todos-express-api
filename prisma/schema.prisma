generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


// Define your database table Todos
model todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  deadline    DateTime?
  completed   Boolean  @default(false)
  todoItems   todoitem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model todoitem {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  todo        todo     @relation(fields: [todoId], references: [id], onDelete: Cascade)
  todoId      Int
  completed   Boolean  @default(false)
  deadline    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model user {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  personalEmail String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}